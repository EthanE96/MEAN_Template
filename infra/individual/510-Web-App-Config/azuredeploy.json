{
  // infra/individual/510-Web-App-Config/azuredeploy.json
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Web App to configure."
      }
    },
    "appSettings": {
      "type": "array",
      "metadata": {
        "description": "App settings for the web app (array of name/value/slotSetting objects)."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2024-11-01",
      "name": "GetAppSettings",
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "Inner"
        },
        "parameters": {
          "appNameInner": {
            "value": "[parameters('webAppName')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "appNameInner": {
              "type": "string"
            }
          },
          "variables": {
            "apiVersionAppConfigInner": "2020-12-01"
          },
          "resources": [],
          "outputs": {
            "AppSettings": {
              "type": "object",
              "value": "[list(format('{0}/config/appsettings', resourceId('Microsoft.Web/sites', parameters('appNameInner'))), variables('apiVersionAppConfigInner')).properties]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/config",
      "name": "[concat(parameters('webAppName'), '/appsettings')]",
      "apiVersion": "2021-02-01",
      "dependsOn": [ "GetAppSettings" ],
      "properties": "[union(reference('GetAppSettings').outputs.AppSettings.value, parameters('appSettings'))]"
    }
  ]
}

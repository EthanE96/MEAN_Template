{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cosmosDbAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Cosmos DB account."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "miName": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the user-assigned managed identity."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-04-15",
      "name": "[parameters('cosmosDbAccountName')]",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[parameters('miName')]": {}
        }
      },
      "properties": {
        "databaseAccountOfferType": "Standard",
        "locations": [
          {
            "locationName": "[parameters('location')]",
            "failoverPriority": 0
          }
        ],
        "publicNetworkAccess": "Enabled",
        "enableFreeTier": true
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases",
      "apiVersion": "2023-04-15",
      "name": "[format('{0}/mean-db', parameters('cosmosDbAccountName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName'))]"
      ],
      "properties": {
        "resource": {
          "id": "mean-db"
        }
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers",
      "apiVersion": "2023-04-15",
      "name": "[format('{0}/mean-db/mean-container', parameters('cosmosDbAccountName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', parameters('cosmosDbAccountName'), 'mean-db')]"
      ],
      "properties": {
        "resource": {
          "id": "mean-container",
          "partitionKey": {
            "paths": [ "/partitionKey" ],
            "kind": "Hash"
          }
        }
      }
    }
  ],
  "outputs": {
    "cosmosDbAccountName": {
      "type": "string",
      "value": "[parameters('cosmosDbAccountName')]"
    }
  }
}
